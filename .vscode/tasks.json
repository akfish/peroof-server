{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    // "_runner": "terminal",
    "tasks": [
        {
            "taskName": "start",
            "args": ["run", "start"]
        },
        {
            "taskName": "build",
            "args": ["run", "build"],
            "problemMatcher": "$tsc",
            "showOutput": "silent"
        },
        {
            "taskName": "test",
            "args": ["run", "test"]
        }
    ]
}